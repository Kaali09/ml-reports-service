<html>

<head>
  <link rel="stylesheet" type="text/css" href="style.css">
</head>

<body>

  <div style="padding:20px">

    <%if(data.schoolName) {%>
    <div style="border: solid 1px #A9A9A9;margin-top:15px;padding: 10px">
      <h4><%=data.schoolName %></h4>
    </div>
    <div style="margin-top:20px">
      <h4>Total Observations : <%= data.totalObservations %></h4>
    </div>
    <% } %>

    <%if(data.schoolsObserved) {%>
    <div style="margin-top:20px;margin-bottom:20px;display: flex">
      <div style="width:50%;flex:1">
        <h4>Total Schools : <%= data.totalSchools %></h4>
      </div>
      <div style="width:50%;flex:1">
        <h4>Schools Observed : <%= data.schoolsObserved %></h4>
      </div>
    </div>
    <% } %>


    <%if(data.totalScore) {%>
    <div style="margin-top:20px;margin-bottom:20px;display: flex">
      <div style="width:50%;flex: 1">
        <h4>Total Score : <%= data.totalScore %></h4>
      </div>
      <div style="width:50%;flex: 1">
        <h4>Score Achieved : <%= data.scoreAchieved %></h4>
      </div>
    </div>
    <% } %>

    <div>
      <% var orderData= data.orderData; %>
      <% var i=0 %>
      <% for (var r=0;r < orderData.length; r++){  %>
      <div style="border: solid 1px #A9A9A9;text-align: center;margin-top:50px;margin-bottom:50px">
        <p style="font-size:22px;"><%= orderData[r][0].options.question %></p>
        <img src="<%=orderData[r][0].options.filename%>" />
      </div>
      <% ++i %>
      <% if(i == 2) {%>
      <div style='page-break-after:always'></div>
      <% i=0 %>
      <% } %>
      <% } %>
    </div>

  </div>

</body>

</html>